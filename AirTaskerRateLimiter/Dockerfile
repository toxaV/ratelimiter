FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["AirTaskerRateLimiter/AirTaskerRateLimiter.csproj", "AirTaskerRateLimiter/"]
RUN dotnet restore "AirTaskerRateLimiter/AirTaskerRateLimiter.csproj"
COPY . .
WORKDIR "/src/AirTaskerRateLimiter"
RUN dotnet build "AirTaskerRateLimiter.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "AirTaskerRateLimiter.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "AirTaskerRateLimiter.dll"]